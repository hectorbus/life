source "https://rubygems.org"

# Thor is a simple and efficient tool for building self-documenting command line utilities.
gem "thor", "~> 1.2.1"

# Draw in your terminal with Unicode Braille characters.
gem "drawille", "~> 0.3.3"

# Ruby gem for colorizing text using ANSI escape sequences.
gem "colorize", "~> 0.8.1"
